<h1>Roles en el sistema</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <% if policy(@roles).show? %>
        <th colspan="3">Opciones</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.nombre %></td>
        <td><%= role.descripcion %></td>
        <% if policy(@roles).show? %>
          <td><%= link_to 'Mostrar', role %></td>
          <td><%= link_to 'Editar', edit_role_path(role) %></td>
          <td><%= link_to 'Eliminar', role, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if policy(@roles).new? %>
  <%= link_to 'Crear rol', new_role_path %>
<% end %>
