<%= form_with(model: role, local: true) do |form| %>
  <% if role.errors.any? %>
    <div id="error_explanation">
      <h2>Los siguientes errores no permitieron que el registro se guardara:</h2>

      <ul>
      <% role.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :nombre %>
    <%= form.text_field :nombre, class:"form-control col-md-2" %>

    <%= form.label :descripcion %>
    <%= form.text_field :descripcion, class:"form-control col-md-4" %>
  </div>

  <div class="actions">
    <%= form.submit "Guardar", class: 'btn btn-primary' %>
  </div>
<% end %>
