<h2 class="sub">Buscar relacion</h2>
<div class="row">
  <div class="col-md-12">
    <p>Escriba los datos</p>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= form_tag(relacion_constancia_documentos_path, method: :get) do %>
    <div class="col-md-4">
      <%= label_tag 'Relación:' %>
      <%= text_field_tag :relacion, params[:relacion], class:'form-control inicio', required: true %>
    </div>
    <div class="col-md-4">
      <%= label_tag 'Unidad academica:' %>
      <%= text_field_tag :escuela, params[:escuela], class:'form-control inicio' %>
    </div>
    <div class="col-md-4">
      <%= label_tag 'Año:' %>
      <%= text_field_tag :anio, params[:anio], class:'form-control inicio' %>
    </div>
    <br>
    <div class="col-md-4">
      <%= submit_tag 'Buscar relación', name: nil, class:'btn btn-md btn-primary' %>
    </div>
    <% end %>
  </div>
</div>
